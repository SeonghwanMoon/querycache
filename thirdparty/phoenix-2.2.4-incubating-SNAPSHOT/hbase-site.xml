<configuration>
    <property>
	<name>hbase.rootdir</name>
	<value>hdfs://BDB/hbase</value>
    </property>
    <property>
	<name>hbase.cluster.distributed</name>
	<value>true</value>
    </property>
    <property>
	<name>hbase.zookeeper.quorum</name>
	<value>DICm001,DICm002,DICm003,DICm004,DICm005</value>
	<!--value>BDBm001,BDBm002,BDBn001</value-->
    </property>
    <property>
	<name>hfile.block.cache.size</name>
	<value>0.4</value>
	<description> 0.4 == 50 % </description>
    </property>
    <property>
	<name>hbase.regionserver.global.memstore.size</name>
	<value>0.4</value>
	<description> 0.4 == 50 % </description>
    </property>

    <property>
	<name>hbase.zookeeper.property.dataDir</name>
	<value>/app/data/zookeeper</value>
    </property>
    
    <!--property>
	<name>hbase.regionserver.global.memstore.lowerLimit</name>
	<value>0.1</value>
    </property>
    <property>
	<name>hbase.regionserver.global.memstore.upperLimit</name>
	<value>0.3</value>
    </property-->
    <property>
	<name>hbase.ipc.client.tcpnodelay</name>
	<value>true</value>
    </property>
    <property>
	<name>hbase.regionserver.codecs</name>
	<value>snappy</value>
    </property>
    <property>
	<name>hbase.storescanner.parallel.seek.enable</name>
	<value>true</value>
    </property>
    <property>
	<name>hbase.client.scanner.timeout.period</name>
	<value>6000000</value>
	<description>lease period in milliseconds default 60000 </description>
    </property>
    <property>
	<name>hbase.metrics.showTableName</name>
	<value>false</value>
    </property>
   
    <property>
	<name>hbase.hregion.memstore.block.multiplier</name>
	<value>32</value>
	<description>2</description>
    </property>
    <property>
	<name>hbase.hstore.blockingStoreFiles</name>
	<value>20</value>
    </property>
    <property>
	<name>hbase.regionserver.handler.count</name>
	<value>200</value>
	<description>default 10</description>
    </property>
    <property>
	<name>hbase.client.scanner.caching</name>
	<value>50000</value>
    </property>
    <property>
	<name>hbase.lease.recovery.timeout</name>
	<value>9000000</value>
	<description>default 900000
	</description>
    </property>
    <property>
	<name>hbase.lease.recovery.dfs.timeout</name>
	<value>6400000</value>
	<description>default 64000
	</description>
    </property>

    <property>
	<name>hbase.regionserver.lease.period</name>
	<value>6000000</value>
	<description>default 60000
	</description>
    </property>
    <property>
	<name>hbase.rpc.timeout</name>
	<value>6000000</value>
	<description>default 60000
	</description>
    </property>
    <property>
	<name>hbase.regionserver.checksum.verify</name>
	<value>false</value>
	<description>
	</description>
    </property>
    <property>
	<name>dfs.client.read.shortcircuit</name>
	<value>true</value>
	<description>
	</description>
    </property>
    <property>
	<name>dfs.block.local-path-access.user</name>
	<value>hdfs</value>
    </property>
   
    <property>
	<name>hbase.hregion.memstore.flush.size</name>
	<value>21474836480</value>
	<description>20G</description>
    </property>

    <!--phoenix-->
    <property>
	<name>hbase.regionserver.wal.codec</name>
	<value>org.apache.hadoop.hbase.regionserver.wal.IndexedWALEditCodec</value>
    </property>
    <property>
	<name>phoenix.query.timeoutMs</name>
	<value>60000000</value>
    </property>
    <property>
	<name>phoenix.query.keepAliveMs</name>
	<value>6000000</value>
    </property>
    <property>
	<name>phoenix.mutate.batchSize</name>
	<value>30000</value>
    </property>
    <!--property>
	<name>phoenix.mutate.maxSize</name>
	<value>50000000</value>
    </property-->
    <property>
	<name>phoenix.query.threadPoolSize</name>
	<value>2560</value>
    </property>
    <property>
	<name>phoenix.query.queueSize</name>
	<value>6000</value>
    </property>
    <property>
	<name>phoenix.query.spoolThresholdBytes</name>
	<value>104857600</value>
    </property>
    <property>
	<name>phoenix.query.maxGlobalMemoryPercentage</name>
	<value>50</value>
    </property>

    
    <property>
	<name>phoenix.query.targetConcurrency</name>
	<value>900</value>
    </property>
    <property>
	<name>phoenix.query.maxConcurrency</name>
	<value>900</value>
    </property>
  
    <property>
	<name>phoenix.query.maxIntraRegionParallelization</name>
	<value>164</value>
    </property>
</configuration>
